<p id="notice"><%= notice %></p>

<h1>Stops</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Routes</th>
      <th>Next stop time</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @stops.each do |stop| %>
      <tr>
        <td><%= stop.name %></td>
        <td><%= stop.routes_summary %></td>
        <td>
          <% if stop.next_stop_time %>
            <%= stop.next_stop_time.route_id %> train: <%= time_ago_in_words stop.next_stop_time.latest_estimate.to_datetime %>
          <% end %>
        </td>
        <td><%= link_to 'Stop times', stop_path(stop.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
